{
  "name": "context-translator",
  "version": "1.0.7",
  "description": "Firefox extension for contextual translation using local LLMs",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint extension/**/*.js",
    "lint:fix": "eslint extension/**/*.js --fix",
    "format": "prettier --write \"extension/**/*.js\"",
    "format:check": "prettier --check \"extension/**/*.js\"",
    "build": "npm run lint && npm test && ./scripts/package-extension.sh",
    "build:full": "npm run lint:fix && npm run test:coverage && ./scripts/package-extension.sh",
    "version:major": "./scripts/bump-version.sh major",
    "version:minor": "./scripts/bump-version.sh minor",
    "version:patch": "./scripts/bump-version.sh patch"
  },
  "dependencies": {
    "ccusage": "^17.1.3",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@jest/globals": "30.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.4.0",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "prettier": "^3.6.2"
  }
}
