{
  "manifest_version": 2,
  "name": "Context Translator",
  "version": "1.0.0",
  "description": "Context-aware translation using local LLM",

  "browser_specific_settings": {
    "gecko": {
      "id": "context-translator@bike-mazzell",
      "strict_min_version": "50.0"
    }
  },

  "permissions": [
    "nativeMessaging",
    "storage",
    "activeTab",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/translator.js"],
      "css": ["content/translator.css"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_title": "Context Translator",
    "default_popup": "popup/popup.html"
  },

  "commands": {
    "toggle-translator": {
      "suggested_key": {
        "default": "Ctrl+Alt+C"
      },
      "description": "Toggle Context Translator"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
